% sp_lab_2_3

% 给定参数
N = 128;
N_prime = 32;
omega = 0.2 * pi;
n_0 = 64;
S = 1;

n = 1:N_prime;
s = cos(omega * n);
s = [zeros(1, n_0), s, zeros(1, N - n_0 - N_prime)];
subplot(3, 1, 1);
stem((1:128), s);
xlabel('n');
ylabel('')

% 设置噪声样本序列的均值和标准差
rng(2023);
mu = 0;
sigma = 0.2;
% 生成正态分布随机噪声样本序列
u = normrnd(mu, sigma, [1, N]);
subplot(3, 1, 2);
stem((1:128), u);

x = s + u;
subplot(3, 1, 3);
stem((1:128), x);
xlabel('n');
ylabel('Wave of x(n)');
